@page
@model Linked.Areas.Identity.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Activate User</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Role" class="control-label">Role:</label>
                @{
                List<SelectListItem> listItems = new List<SelectListItem>(Model.RolesList);
                }
                @Html.DropDownListFor(model => model.Role, listItems, "-- Select Role --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
