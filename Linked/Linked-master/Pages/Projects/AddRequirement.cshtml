@page
@model Linked.Pages.AddRequirement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Requirement</h1>

<h3>@Html.DisplayFor(model => model.Project.Title)</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Requirement.Specialty" class="control-label"></label>
                <select asp-for="Requirement.Specialty" class="form-control" asp-items="Model.Specialties"></select>
                <span asp-validation-for="Requirement.Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirement.Level" class="control-label"></label>
                <select asp-for="Requirement.Level" class="form-control" asp-items="Model.Levels"></select>
                <span asp-validation-for="Requirement.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirement.Hourload" class="control-label"></label>
                <input asp-for="Requirement.Hourload" class="form-control" />
                <span asp-validation-for="Requirement.Hourload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
