@page
@model Linked.Pages.Clients.DetailsModel
@using Linked.Models;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h3>Client</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Client.ClientID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<hr />

@if (Model.Projects.Count()>0)
{
    <h4>Projects</h4>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Description</th>
            <th>CompletionStatus</th>
        </tr>

        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    <a asp-page="../Projects/Details" asp-route-id="@item.ProjectID">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.CompletionStatus
                </td>
            </tr>
        }
    </table>
}