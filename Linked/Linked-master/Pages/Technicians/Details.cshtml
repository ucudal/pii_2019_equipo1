@page
@model Linked.Pages.Technicians.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h3>Technician</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Technician.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Technician.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Technician.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Technician.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Technician.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Technician.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Technician.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Technician.Level)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Technician.TechnicianID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<hr />


@if (Model.Projects.Count()>0)
{
    <h4>Projects</h4>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Client</th>
            <th>CompletionStatus</th>
        </tr>

        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    <a asp-page="../Projects/Details" asp-route-id="@item.ProjectID">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Client
                </td>
                <td>
                    @item.CompletionStatus
                </td>
            </tr>
        }
    </table>
}

@if (Model.ScoreSheets.Count()>0)
{
    <h4>FeedBacks</h4>
    <table class="table">
        <tr>
            <th>Score</th>
            <th>Puntualidad</th>
            <th>Respeto</th>
            <th>Formalidad</th>
            <th>Profesionalismo</th>
            <th>Compromiso</th>
        </tr>

        @foreach (var item in Model.ScoreSheets)
        {
            <tr>
                <td>
                    @item.Score
                </td>
                <td>
                    @item.Puntualidad
                </td>
                <td>
                    @item.Respeto
                </td>
                <td>
                    @item.Formalidad
                </td>
                <td>
                    @item.Profesionalismo
                </td>
                <td>
                    @item.Compromiso
                </td>
            </tr>
        }
    </table>
}